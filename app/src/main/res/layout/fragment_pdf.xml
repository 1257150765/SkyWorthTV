<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ruiduoyi.skyworthtv.view.fragment.PDFFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/background" />
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_title_pdfFragment"
            android:textStyle="bold"
            android:textColor="@color/yellow2"
            android:layout_marginTop="@dimen/y15"
            android:textSize="@dimen/y60"
            android:text="PDF展示"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/y120"
        android:layout_marginTop="@dimen/x135"
        android:layout_marginRight="@dimen/y120"
        android:layout_marginBottom="@dimen/x75"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.github.barteksc.pdfviewer.PDFView
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:id="@+id/pdf_pdfView_pdfFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.github.barteksc.pdfviewer.PDFView>
    </LinearLayout>

</FrameLayout>
