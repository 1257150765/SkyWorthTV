<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/normalTextSize</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <!--<item name="android:background">@color/text_staff_chart_fragment</item>-->
        <item name="android:background">@drawable/textview_bord_right</item>

    </style>
    <style name="TextViewStyle2" parent="TextViewStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/normalSmallTextSize</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <!--<item name="android:background">@color/text_staff_chart_fragment</item>-->
        <item name="android:background">@drawable/textview_bord_right2</item>

    </style>
    <style name="ControlTitleTextViewStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/normalTextSize</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <!--<item name="android:background">@color/text_staff_chart_fragment</item>-->
        <item name="android:background">@drawable/textview_bord_right</item>

    </style>
    <style name="ControlTextViewStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/normalTextSize</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <!--<item name="android:background">@color/text_staff_chart_fragment</item>-->
        <item name="android:background">@drawable/product_textview_bord_right</item>

    </style>
    <style name="TextViewStyle3">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/normalTextSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <!--<item name="android:background">@color/text_staff_chart_fragment</item>-->
        <item name="android:background">@drawable/textview_bord_bottom</item>
    </style>
    <color name="yellow">#ecfa12</color>
    <color name="colorAccent">#b8f4f0</color>

    <style name="CheckBoxStyle" parent="@android:style/Widget.Material.CompoundButton.CheckBox">
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorControlNormal">@color/white</item>
    </style>
</resources>
